{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++"
      }
    },
    {
      "name": "release",
      "displayName": "Release Build",
      "description": "Release build with maximum performance optimizations",
      "generator": "Ninja",
      "inherits": [
        "base"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_FLAGS_RELEASE": "-O3 -DNDEBUG -march=native -flto -ffast-math -funroll-loops -fpeel-loops -floop-interchange -fno-plt -fomit-frame-pointer -fno-stack-protector"
      },
      "binaryDir": "${sourceDir}/build/release"
    },
    {
      "name": "debug",
      "displayName": "Debug Build",
      "description": "Debug build with sanitizers enabled",
      "generator": "Ninja",
      "inherits": [
        "base"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS_DEBUG": "-O1 -fsanitize=memory,undefined -fno-omit-frame-pointer -g",
        "BUILD_TESTING": "ON"
      },
      "binaryDir": "${sourceDir}/build/debug"
    }
  ],
  "buildPresets": [
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "debug",
      "configurePreset": "debug"
    }
  ],
  "testPresets": [
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "debug",
      "configurePreset": "debug"
    }
  ]
}
